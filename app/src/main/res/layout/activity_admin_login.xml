<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.dev.r19.sakorisarothiadmin.AdminLogin">

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Welcome Admin"
        android:textSize="25dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textColor="#000000"/>
    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@drawable/ic_directions_bike_black_24dp"
        android:layout_below="@+id/textView7"
        android:layout_marginTop="70dp"
        android:layout_centerHorizontal="true"/>


    <EditText
        android:id="@+id/AUserId"
        android:layout_width="320dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/textView7"
        android:layout_marginEnd="26dp"
        android:layout_marginTop="220dp"
        android:textAlignment="center"
        android:background="@drawable/text_2"
        android:drawableLeft="@drawable/ic_person"
        android:textCursorDrawable="@drawable/color_cursor"
        android:inputType="textPersonName"
        android:hint="name/id" />

    <EditText
        android:id="@+id/APass"
        android:layout_width="320dp"
        android:layout_height="40dp"
        android:layout_alignStart="@+id/AUserId"
        android:layout_below="@+id/AUserId"
        android:layout_marginTop="23dp"
        android:textAlignment="center"
        android:hint="password"
        android:background="@drawable/text_2"
        android:textCursorDrawable="@drawable/color_cursor"
        android:drawableLeft="@drawable/ic_menu_login"
        android:inputType="textPassword" />



    <Button
        android:id="@+id/AdminLogin"
        android:layout_width="320dp"
        android:layout_height="40dp"
        android:layout_alignStart="@+id/APass"
        android:layout_below="@+id/APass"
        android:layout_marginTop="66dp"
        android:background="@drawable/btn_4"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:text="Log in" />
</RelativeLayout>
